<%= simple_form_for @item do |f| %>

  <%= f.input :title %>
  <%= f.input :creator %>
  <%= f.input :publisher %>
  <%= f.input :identifier %>
  <%= f.input :available %>
  <%= f.input :type %>
  <%= f.input :description %>
  <%= f.input :edition %>
  <%= f.input :series %>
  <%= f.input :version %>
  <%= f.input :date %>
  <%= f.input :format %>
  <%= f.input :language %>
  <%= f.input :relation %>
  <%= f.input :rights %>
  <%= f.input :subject %>
  <%= f.input :citation %>

  <%= f.submit %>
<% end %>